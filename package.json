{
  "name": "stockguard",
  "version": "1.0.0",
  "description": "WhatsApp-based inventory management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security-check": "npm audit",
    "security-fix": "npm audit fix",
    "postinstall": "chmod +x install-ffmpeg.sh && ./install-ffmpeg.sh",
    "build": "echo 'No build step required'",
    "docker:build": "docker build -t stockguard .",
    "docker:run": "docker run -p 3000:3000 --env-file .env stockguard",
    "start:prod": "node server.js",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "migrate": "echo 'No database migrations required'",
    "seed": "echo 'No database seeding required'",
    "deploy": "echo 'Run your deployment commands here'",
    "logs": "pm2 logs stockguard",
    "monitor": "pm2 monit",
    "pm2:start": "pm2 start server.js --name stockguard",
    "pm2:stop": "pm2 stop stockguard",
    "pm2:restart": "pm2 restart stockguard",
    "pm2:delete": "pm2 delete stockguard"
  },
  "keywords": [
    "whatsapp",
    "inventory",
    "management",
    "twilio",
    "airtable",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "twilio": "^4.23.0",
    "axios": "^1.6.7",
    "google-auth-library": "^9.10.0",
    "node-cron": "^3.0.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "pm2": "^5.3.0"
  },
  "optionalDependencies": {
    "airtable": "^0.12.2"
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=8.x"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["./tests/setup.js"]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "api/",
      "database.js",
      "dailySummary.js"
    ],
    "ignore": [
      "node_modules/",
      "coverage/",
      "tests/"
    ],
    "ext": "js",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/stockguard.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/stockguard/issues"
  },
  "homepage": "https://github.com/yourusername/stockguard#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  }
}

{
  "name": "stockguard",
  "version": "1.0.0",
  "description": "AI-powered WhatsApp inventory management system with dynamic pricing, GST-compliant invoicing, and real-time analytics for retail businesses",
  "main": "server.js",
  "scripts": {
      "start": "node server.js",
      "dev": "nodemon server.js",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "lint": "eslint . --ext .js",
      "lint:fix": "eslint . --ext .js --fix",
      "security-check": "npm audit",
      "security-fix": "npm audit fix",
      "postinstall": "chmod +x install-ffmpeg.sh && ./install-ffmpeg.sh",
      "build": "echo 'No build step required'",
      "docker:build": "docker build -t stockguard .",
      "docker:run": "docker run -p 3000:3000 --env-file .env stockguard",
      "start:prod": "cross-env NODE_ENV=production node server.js",
      "health-check": "curl -f http://localhost:3000/health || exit 1",
      "migrate": "node scripts/migrate.js",
      "migrate:products": "node scripts/migrate-products.js",
      "seed": "node scripts/seed.js",
      "seed:products": "node scripts/seed-products.js",
      "deploy": "echo 'Run your deployment commands here'",
      "logs": "pm2 logs stockguard",
      "monitor": "pm2 monit",
      "pm2:start": "pm2 start server.js --name stockguard",
      "pm2:stop": "pm2 stop stockguard",
      "pm2:restart": "pm2 restart stockguard",
      "pm2:delete": "pm2 delete stockguard",
      "price-update": "node scripts/price-update.js",
      "cleanup": "node scripts/cleanup.js",
      "backup": "node scripts/backup.js",
      "restore": "node scripts/restore.js"
    },
  "keywords": [
      "whatsapp",
      "inventory",
      "management",
      "twilio",
      "airtable",
      "automation",
      "pricing",
      "gst",
      "invoice",
      "retail",
      "grocery",
      "shop",
      "business",
      "ai",
      "chatbot"
    ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
      "express": "^4.18.2",
      "twilio": "^4.23.0",
      "axios": "^1.6.7",
      "google-auth-library": "^9.10.0",
      "node-cron": "^3.0.3",
      "helmet": "^7.1.0",
      "cors": "^2.8.5",
      "compression": "^1.7.4",
      "dotenv": "^16.3.1",
      "winston": "^3.11.0",
      "express-rate-limit": "^7.1.5",
      "express-validator": "^7.0.1",
      "pdfkit": "^0.14.0",
      "moment": "^2.29.4",
      "morgan": "^1.10.0",
      "airtable": "^0.12.2",
      "multer": "^1.4.5-lts.1",
      "csv-parser": "^3.0.0",
      "xlsx": "^0.18.5",
      "nodemailer": "^6.9.7",
      "joi": "^17.11.0"
    },
  "devDependencies": {
      "nodemon": "^3.0.2",
      "jest": "^29.7.0",
      "supertest": "^6.3.3",
      "eslint": "^8.56.0",
      "eslint-config-standard": "^17.1.0",
      "eslint-plugin-import": "^2.29.1",
      "eslint-plugin-n": "^16.6.2",
      "eslint-plugin-promise": "^6.1.1",
      "pm2": "^5.3.0",
      "@types/jest": "^29.5.8",
      "@types/node": "^20.10.5",
      "@types/express": "^4.17.21",
      "nyc": "^15.1.0",
      "cross-env": "^7.0.3"
    },
  "optionalDependencies": {
    "airtable": "^0.12.2"
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=8.x"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["./tests/setup.js"]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "api/",
      "database.js",
      "dailySummary.js"
    ],
    "ignore": [
      "node_modules/",
      "coverage/",
      "tests/"
    ],
    "ext": "js",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "repository": {
      "type": "git",
      "url": "https://github.com/yourusername/stockguard.git"
    },
    "bugs": {
      "url": "https://github.com/yourusername/stockguard/issues"
    },
    "homepage": "https://github.com/yourusername/stockguard#readme",
    "documentation": "https://github.com/yourusername/stockguard/wiki",
    "support": {
      "email": "support@stockguard.ai",
      "url": "https://stockguard.ai/support"
    },
    "funding": {
      "type": "patreon",
      "url": "https://patreon.com/stockguard"
    },
  "husky": {
      "hooks": {
        "pre-commit": "npm run lint",
        "pre-push": "npm run test && npm run test:coverage"
      }
    },
    "nyc": {
      "reporter": [
        "text",
        "lcov",
        "html"
      ],
      "exclude": [
        "**/test/**",
        "**/node_modules/**",
        "**/coverage/**",
        "**/scripts/**"
      ]
    },
    "jest": {
      "collectCoverageFrom": [
        "**/*.js",
        "!**/node_modules/**",
        "!**/coverage/**",
        "!**/test/**",
        "!**/scripts/**"
      ],
      "coverageThreshold": {
        "global": {
          "branches": 70,
          "functions": 70,
          "lines": 70,
          "statements": 70
        }
      }
    }
      "config": {
          "port": 3000,
          "host": "0.0.0.0",
          "env": "development",
          "logLevel": "info",
          "database": {
            "retryAttempts": 3,
            "retryDelay": 1000,
            "timeout": 10000
          },
          "whatsapp": {
            "messageLimit": 1600,
            "rateLimit": {
              "windowMs": 60000,
              "max": 100
            }
          },
          "pricing": {
            "defaultGST": 0.18,
            "updateReminder": "08:00",
            "expiryDays": 7
          },
          "cleanup": {
            "pdfRetentionDays": 7,
            "logRetentionDays": 30
          }
        },
        "engines": {
          "node": ">=18.x",
          "npm": ">=8.x"
        },
        "os": [
          "darwin",
          "linux",
          "win32"
        ],
        "cpu": [
          "x64",
          "arm64"
        ],
        "author": {
          "name": "Your Name",
          "email": "your.email@example.com",
          "url": "https://yourwebsite.com"
        },
        "license": "MIT",
        "licenses": [
          {
            "type": "MIT",
            "url": "https://opensource.org/licenses/MIT"
          }
        ],
        "contributors": [
          {
            "name": "Contributor Name",
            "email": "contributor@example.com"
          }
        ]
}
